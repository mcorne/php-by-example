<h1>
  <?=$this->_message_translation->translate('List of available functions');?>

  <?php if ($this->_function_list->function_matches):?>
    (<?=count($this->_function_list->function_matches);?>)
  <?php endif;?>
</h1>

<?php if ($this->_function_list->function_matches):?>

  <?php foreach ($this->_function_list->function_matches as $function_name):?>
    <div>
      <a href="<?=$this->_output->display_url('function', $function_name);?>"><?=$this->_output->highlight_pattern_in_function_name($function_name, $this->_application->function_name_pattern);?></a>
    </div>
  <?php endforeach;?>

<?php else :?>

  <div class="red"><?=$this->_message_translation->translate('No function was found that matches this pattern.');?></div>
  <br />
  <a href="<?=$this->_output->display_url('function_list');?>"><?=$this->_message_translation->translate('List of all available functions');?></a>

<?php endif;?>
